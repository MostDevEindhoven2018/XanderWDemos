
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CssDemo</title>

    <style>
        body
        {
            font-family: Bahnschrift;
            background-color: silver;
            /*background-image: url("images/picture.jpg");*/
        }

        h1
        {
            color: blue;
            text-align: center;
            border: 3px dotted blue;
            margin: 20px 10px 5px 200px; /* Top Right Bottom Left */
        }

        h2 
        {
            color: red;
        }

        #champion
        {
            font-size: 200%;
            color: orange;
            border: 5px dashed orange;
        }

        #champion
        {
            font-style: italic;
            color: red;
        }

        .playoffs
        {
            background-color: green;
            color: white;
        }
